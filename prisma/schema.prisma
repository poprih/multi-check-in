// schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL") // uses connection pooling
  directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}

enum Gender {
  Male
  Female
}

model Member {
  id        String   @id @default(cuid())
  name      String
  gender    Gender
  birthday  String
  fellow    Boolean
  records   String[] @map(name: "record_ids")
  createdAt DateTime @default(now()) @map(name: "created_at")
  updatedAt DateTime @updatedAt @map(name: "updated_at")
}

enum TimePeriod {
  AM
  PM
  NOON
}

model CheckInRecord {
  id        String     @id @default(cuid())
  title     String     @unique
  period    TimePeriod
  members   String[]   @map(name: "member_ids")
  createdAt DateTime   @default(now()) @map(name: "created_at")
  updatedAt DateTime   @updatedAt @map(name: "updated_at")
}
